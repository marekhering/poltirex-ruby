<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Delivery time</th>
      <th>Departure place lat</th>
      <th>Departure place lon</th>
      <th>Destination place lat</th>
      <th>Destination place lon</th>
      <th>Payload weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.delivery_time %></td>
        <td><%= order.departure_place_lat %></td>
        <td><%= order.departure_place_lon %></td>
        <td><%= order.destination_place_lat %></td>
        <td><%= order.destination_place_lon %></td>
        <td><%= order.payload_weight %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

