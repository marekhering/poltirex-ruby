<p id="notice"><%= notice %></p>

<h1>Stretches</h1>

<table>
  <thead>
    <tr>
      <th>Start datetime</th>
      <th>End datetime</th>
      <th>Start place lat</th>
      <th>Start place lon</th>
      <th>End place lat</th>
      <th>End place lon</th>
      <th>Route</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stretches.each do |stretch| %>
      <tr>
        <td><%= stretch.start_datetime %></td>
        <td><%= stretch.end_datetime %></td>
        <td><%= stretch.start_place_lat %></td>
        <td><%= stretch.start_place_lon %></td>
        <td><%= stretch.end_place_lat %></td>
        <td><%= stretch.end_place_lon %></td>
        <td><%= stretch.route %></td>
        <td><%= link_to 'Show', stretch %></td>
        <td><%= link_to 'Edit', edit_stretch_path(stretch) %></td>
        <td><%= link_to 'Destroy', stretch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

