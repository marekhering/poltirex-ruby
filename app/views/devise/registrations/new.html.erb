<div class="column is-4 is-offset-4">
  <div class="box">
    <h3 class="title">Zarejestruj się!</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="has-text-right columns is-centered">
        <div class="column is-three-fifths" style="padding-right: 30px">
          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :name, 'Imie' %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>

          <div class="field">
            <%= f.label :surname, 'Nazwisko' %>
            <%= f.text_field :surname, autocomplete: "surname" %>
          </div>

          <div class="field">
            <%= f.label :login, 'Login' %>
            <%= f.text_field :login, autocomplete: "login" %>
          </div>

          <div class="field">
            <%= f.label :password, 'Hasło' %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, 'Powtórz hasło'%>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>
      </div>


      <div class="actions">
        <%= f.submit "Zarejestruj się", :class => 'button is-info' %>
      </div>
    <% end %>

    <div style="padding-top: 22px">
      <h3 class="is-size-5 has-text-weight-bold" style="padding-bottom: 8px">Masz już konto? Zaloguj się!</h3>
      <%= link_to "Zaloguj się", new_session_path(resource_name), :class => 'button is-info' %><br />
    </div>


  </div>
</div>